<%- include('../header') %>

<div class="row justify-content-center mt-5">
  <div class="col-md-6">
    <form class="row g-3" action="/categories/update/<%= result.id %>" method="POST">
      <div class="row mb-3">
        <label for="">Edit data Categories</label>
      </div>
      <div class="mb-3 row">
        <label class="col-2 col-form-label">Name</label>
        <div class="col-6">
          <input type="text" name="name" class="form-control" value="<%= result.name %>" required />
        </div>
      </div>
      <div class="col-12 float-right">
        <button class="btn btn-primary" type="submit">Edit</button>
        <a href="/categories" class="btn btn-danger">Kembali</a>
      </div>
    </form>
  </div>
</div>
